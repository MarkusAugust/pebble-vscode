{
  "name": "pebble-support",
  "displayName": "Pebble Template Support",
  "description": "Pebble template engine syntax highlighting and snippets for HTML files",
  "version": "0.3.0",
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarkusAugust/pebble-vscode"
  },
  "author": {
    "name": "Markus August",
    "url": "https://github.com/MarkusAugust/pebble-vscode"
  },
  "homepage": "https://github.com/MarkusAugust/pebble-vscode",
  "icon": "pebbleInHtml.png",
  "publisher": "MarkusAugust",
  "keywords": [
    "pebble",
    "template",
    "pebble-html",
    "html",
    "syntax"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "scopeName": "injection.html.pebble",
        "path": "./syntaxes/pebble-injection.tmLanguage.json",
        "injectTo": [
          "text.html.basic",
          "text.html.derivative"
        ]
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/pebble.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check --write"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1"
  }
}
